<h1>Games for {{console.console}} ({{console.developer}})</h1>

<ul>
    {{#each games}}
    <li>
        <h3>{{this.title}}</h3>
        <p>Price: ${{this.gamesConsoles.price}}</p>
        <p>Condition: {{this.gamesConsoles.condition}}</p>
        <p>Stock: {{this.gamesConsoles.stock}}</p>

        <!-- Add to Cart Button -->
        <form action="/cart/add" method="POST">
            <input type="hidden" name="game_id" value="{{this.id}}">
            <input type="hidden" name="console_id" value="{{console.id}}">
            <input type="hidden" name="price" value="{{this.gamesConsoles.price}}">
            <button type="submit">Add to Cart</button>
        </form>
    </li>
    {{/each}}
</ul>
