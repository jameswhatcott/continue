<h1>Games for {{console.console}} ({{console.developer}})</h1>

<ul>
    {{#each games}}
    <li>
        <h3>{{this.title}}</h3>
        <p>Price: ${{this.gamesConsoles.price}}</p>
        <p>Condition: {{this.gamesConsoles.condition}}</p>
        <p>Stock: {{this.gamesConsoles.stock}}</p>

        <!-- Add to Cart Button -->
       <form action="/cart/add" method="POST">
    <input type="hidden" name="userId" value="{{user.id}}">
    <input type="hidden" name="gameId" value="{{this.id}}">
    <input type="number" name="quantity" value="1" min="1">
    <button type="submit">Add to Cart</button>
</form>

    </li>
    {{/each}}
</ul>
